@using SSMM.Model;
@{
    ViewBag.Title = "用户中心 - 首页";
    Layout = "~/Areas/UserCenter/Views/Shared/_UserCenterLayout.cshtml";

    var User = ViewData["User"] as UserDto;
    var Notices = ViewData["Notices"] as List<NoticeDto>;
}

<!-- 详情 -->
<div class="row">
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-xs-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-xs-8 text-right">
                    <h3> 可用流量 </h3>
                    <h2 class="font-bold">50G</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-xs-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-xs-8 text-right">
                    <h3> 已用流量 </h3>
                    <h2 class="font-bold">26.4G</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-xs-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-xs-8 text-right">
                    <h3> 剩余天数 </h3>
                    <h2 class="font-bold">34天</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-xs-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-xs-8 text-right">
                    <h3> 账户余额 </h3>
                    <h2 class="font-bold">0.00元</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- 一言 -->
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> &nbsp; &nbsp;<span class="label label-primary">一言不合就bb</span><code id="oneapi-time" t="10">10</code></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" id="onetext">
            </div>

        </div>
    </div>
</div>

<!-- 快速通道 -->
<div class="row">
    <div class="col-lg-5">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>快速通道:</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        当前余额：@(User.Balance.ToString("0.00"))元
                        @*&nbsp;
                        <a href="/UserCenter/Trade/Recharge" class="btn btn-outline btn-warning">充值</a>*@
                        &nbsp;
                        <a href="" class="btn btn-outline btn-success">提现</a>
                    </div>

                </div>
            </div>

            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>推广计划:</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <code>@($"http://localhost:4777/usercenter/user#{User.AffCode}")</code>               <br /><br />         邀请小伙伴使用，你将获得15%的佣金。
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>最新公告:</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (Notices != null && Notices.Count > 0)
                    {
                        foreach (var notice in Notices)
                        {
                            <div class="feed-element">
                                <div class="media-body ">
                                    <small class="pull-right">@(notice.CreateTime.ToString("yyyy-MM-dd HH:mm:ss"))</small>
                                    <a href="/UserCenter/Other/NoticeInfo/@(notice.Id)" class="text-navy"><strong>@(notice.Title)</strong></a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>

        </div>
    </div>
</div>



@section footscript{
    <script>
        $(document).ready(function () {
            OneApi();
            setInterval(function () {
                var s = $('#oneapi-time');
                var t = s.attr('t');
                var c = s.html();
                c--;
                if (c < 0) {
                    OneApi();
                    c = t;
                }
                s.html(c);
            }, 1200);
        });
        //一言api
        function OneApi() {
            var one = '<p>最科学的上网方式，秋名山老司机，带你体验全新的上网姿势。</p>';
            try {
                $.ajax({
                    url: 'http://api.hitokoto.cn/?c=a,b,c,f',
                    dataType: 'json',
                    success: function (res) {
                        one = '<p>' + res.hitokoto + '&nbsp;&nbsp;&nbsp;&nbsp;—&nbsp;&nbsp;' + res.from + '</p>';
                        $('#onetext').html(one);
                    }
                });
            } catch (e) {
                console.log(e);
                $('#onetext').html(one);
            }
        };
    </script>

}