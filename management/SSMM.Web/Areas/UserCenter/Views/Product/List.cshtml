@using SSMM.Model;
@using SSMM.Helper;
@{
    ViewBag.Title = "购买服务";
    Layout = "~/Areas/UserCenter/Views/Shared/_UserCenterLayout.cshtml";

    var Products = ViewData["Products"] as List<ProductDto>;
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>购买新服务 </h5>

            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="tabs-container">
                            <div class="tabs-left">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#tab-0" aria-expanded="true">套餐列表</a></li>
                                </ul>
                                <div class="tab-content ">
                                    <div id="tab-0" class="tab-pane active">

                                        @{
                                            if (Products != null && Products.Count > 0)
                                            {
                                                foreach (var item in Products)
                                                {
                                                    <div class="panel-body">
                                                        <div class="row">
                                                            <div class="col-md-8">
                                                                <h3 class="text-info">@(item.Name)</h3>
                                                                <p>@Html.Raw(FormatHelper.HtmlDecode(item.Description))</p>
                                                            </div>
                                                            <div class="col-md-3 text-center">
                                                                <br>
                                                                <div class="lead">
                                                                    ￥@(item.Price.ToString("0.00")) RMB
                                                                </div>
                                                                <a href="/UserCenter/Trade/Order/@(item.Id)" class="btn btn-primary"><span class="glyphicon glyphicon-shopping-cart"></span> 现在订购</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        }                                    
                                        
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
