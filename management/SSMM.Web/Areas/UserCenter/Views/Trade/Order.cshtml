@using SSMM.Model;
@{
    ViewBag.Title = "订单详情";
    Layout = "~/Areas/UserCenter/Views/Shared/_UserCenterLayout.cshtml";

    var Product = ViewData["Product"] as ProductDto;
}

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content ">
            <div class="ibox-content p-xl">

                <div class="table-responsive m-t">
                    <table class="table invoice-table">
                        <thead>
                            <tr>
                                <th>产品名称</th>
                                <th>使用流量</th>
                                <th>有效时间</th>
                                <th>产品价格</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div><strong>@(Product.Name)</strong></div>
                                </td>
                                <td>@(Product.Traffic)G</td>
                                <td>@(Product.ExpirationDay)天</td>
                                <td>@(Product.Price.ToString("0.00"))元</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-sm-6 text-left">
                        @(Html.Raw(Product.Description))
                    </div>
                </div>

                <div class="row m-t-xl">
                    <div class="col-sm-12">
                        <h4>设置连接密码</h4>
                        <hr style="margin:0;"/>
                        <div class="form-group m-t col-sm-3">
                            <input type="password" name="sspassword" placeholder="必须，使用ss需要的密码。" class="form-control" required="required" >
                        </div>
                    </div>
                </div>


                <div class="row m-t-lg">
                    <div class="col-sm-12">
                        <h4>优惠码</h4>
                        <hr style="margin:0;" />
                        <div class="form-group m-t col-sm-3">
                            <input type="text" name="promocode" class="form-control" placeholder="可选，如果您有一个优惠码。" >
                        </div>
                        <div class="form-group m-t col-sm-6">
                            <a class="btn btn-warning">验证</a>
                        </div>
                    </div>
                </div>

                <table class="table invoice-total">
                    <tbody>
                        <tr>
                            <td><strong>产品价格 :</strong></td>
                            <td>@(Product.Price.ToString("0.00"))元</td>
                        </tr>
                        <tr>
                            <td><strong>优惠 :</strong></td>
                            <td>0.00元</td>
                        </tr>
                        <tr>
                            <td><strong>总数 :</strong></td>
                            <td>@(Product.Price.ToString("0.00"))元</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-right">
                    <button class="btn btn-primary">支付</button>
                </div>


            </div>
        </div>
    </div>
</div>



