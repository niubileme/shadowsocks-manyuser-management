@using SSMM.Model;
@{
    ViewBag.Title = "支付订单";
    Layout = "~/Areas/UserCenter/Views/Shared/_UserCenterLayout.cshtml";
    var Uid = ViewData["Uid"];
    var Pid = ViewData["Pid"];
    var Pwd = ViewData["Pwd"];
    var Pcode = ViewData["Pcode"];
    var TimeStamp = ViewData["TimeStamp"];
    var Sign = ViewData["Sign"];
}
@section headscript{
    <link href="~/Content/plugins/iCheck/icheck.css" rel="stylesheet" />
}
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>支付订单</h5>
        </div>
        <div class="ibox-content">
            <form method="post" class="form-horizontal" action="/UserCenter/Trade/PayMentPost">
                <input type="hidden" name="uid" value="@Uid" />
                <input type="hidden" name="pid" value="@Pid" />
                <input type="hidden" name="pwd" value="@Pwd" />
                <input type="hidden" name="pcode" value="@Pcode" />
                <input type="hidden" name="timestamp" value="@TimeStamp" />
                <input type="hidden" name="sign" value="@Sign" />
                @*<div class="form-group">
                        <label class="col-sm-2 control-label text-navy">支付金额</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">20.00元</p>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>*@
                <div class="form-group">
                    <label class="col-sm-2 control-label text-navy">支付方式</label>
                    <div class="col-sm-10">
                        <div class="i-checks"><label> <input type="radio" value="@((int)PaymentType.账户余额)" name="type" checked="">&nbsp;&nbsp;&nbsp;&nbsp;账户余额</label></div>
                        <div class="i-checks m-t"><label> <input type="radio" value="@((int)PaymentType.支付宝转账)" name="type">&nbsp;&nbsp;&nbsp;&nbsp;支付宝转账</label></div>
                        <div class="i-checks m-t"><label> <input type="radio" value="2" disabled="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;支付宝支付</label></div>
                        <div class="i-checks m-t"><label> <input type="radio" value="3" disabled="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;微信支付</label></div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary" type="submit">支付</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




@section footscript{
    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                radioClass: 'iradio_square-green',
            });
        });
    </script>

}
