
@{
    ViewBag.Title = "支付订单";
    Layout = "~/Areas/UserCenter/Views/Shared/_UserCenterLayout.cshtml";
}
@section headscript{
<link href="~/Content/plugins/iCheck/icheck.css" rel="stylesheet" />
 }
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>支付订单</h5>
        </div>
        <div class="ibox-content">
            <form method="get" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label text-navy">支付方式</label>
                    <div class="col-sm-10">
                        <div class="i-checks"><label> <input type="radio" value="0" name="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;账户余额</label></div>
                        <div class="i-checks m-t"><label> <input type="radio"  value="1" disabled="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;支付宝</label></div>
                        <div class="i-checks m-t"><label> <input type="radio" value="2" disabled="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;微信</label></div>
                        <div class="i-checks m-t"><label> <input type="radio" value="3" disabled="" checked="">&nbsp;&nbsp;&nbsp;&nbsp;财付通</label></div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label text-navy">支付金额</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">20.00元</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary" type="submit">支付</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




@section footscript{
<script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                radioClass: 'iradio_square-green',
            });
        });
    </script>

}
